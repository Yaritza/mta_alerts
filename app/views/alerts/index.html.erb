<b><font size="9" color="black">Alerts</font></b>

<table class="imagetable">
  <thead>
    <tr>
      <th><font size="5" color="black">Start time</font></th>
      <th><font size="5" color="black">End time</font></th>
      <th><font size="5" color="black">Text </font></th>
      <th><font size="5" color="black">Email </font></th>
       <th><font size="5" color="black"></font></th>
      <th><font size="5" color="black"></font></th>
      <th><font size="5" color="black"> </font></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><b><font size="3" color="black"><%= alert.start.strftime("%a %B %e, %l:%M %p") %></font></b>
        <td><b><font size="3" color="black"><%= alert.end.strftime("%a %B %e, %l:%M %p") %></font></b>
        <td><b><font size="3" color="black"><%= alert.sms %></font></b>
        <td><b><font size="3" color="black"><%= alert.email %></font></b>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Delete', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send', go_alert_path %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>
